<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record model="ir.actions.act_window" id="course_list_action">

        <field name="name">Courses</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first course
            </p>
        </field>

    </record>

    <menuitem name="Open Academy"
            id="main_openacademy_menu"
            web_icon="static/description/icon.jpg"
            sequence="40"/>

    <menuitem id="openacademy_courses_menu" name="Courses"
              parent="main_openacademy_menu"/>

    <menuitem id="courses_menu" name="Courses" parent="openacademy_courses_menu"
              action="course_list_action"/>
    <menuitem id="sesion_menu" name="Sessions" parent="openacademy_courses_menu"
              action="course_list_action"/>

    <record model="ir.ui.view" id="session_form_view">
        <field name="name">session.form</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <form string="Session Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="duration"/>
                        <field name="seats"/>
                        <field name="taken_seats"/>
                        <field name="taken_seats" widget="progressbar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="session_tree_view">
        <field name="name">session.tree</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <tree string="Session Tree">
                <field name="name"/>
                <field name="course_ids"/>
                <field name="taken_seats" widget="progressbar"/>
            </tree>
        </field>
    </record>

</odoo>